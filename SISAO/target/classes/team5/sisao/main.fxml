<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="500.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="team5.sisao.MainController">
    <VBox>
        <HBox alignment="CENTER" maxWidth="Infinity" prefHeight="80.0" prefWidth="149.0" style="-fx-background-color: #D3D3D3; -fx-padding: 10;">
            <ImageView fitHeight="50.0" fitWidth="52.0" preserveRatio="true">
                <Image url="@images/logo.png"/>
            </ImageView>
            <Label alignment="BASELINE_CENTER" prefHeight="35.0" prefWidth="124.0" style="-fx-font-size: 24px; -fx-font-weight: bold;" text="SISAO " />
        </HBox>

        <!-- Main HBox to hold both button sections -->
        <HBox prefHeight="421.0" prefWidth="800.0">

            <!-- VBox for Action Buttons (Left Section) -->
            <VBox prefHeight="444.0" prefWidth="200.0" spacing="10" style="-fx-background-color: #f0f0f0; -fx-padding: 10;">
            <Accordion>
              <panes>
                  <TitledPane animated="false" text="View">
                      <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                          <Button fx:id="btnViewClassrooms" layoutX="14.0" layoutY="14.0" onAction="#ViewClassrooms" prefHeight="25.0" prefWidth="150.0" text="Classrooms" />
                          <Button fx:id="btnViewStudents" layoutX="14.0" layoutY="50.0" onAction="#ViewStudents" prefHeight="25.0" prefWidth="150.0" text="Students" />
                          <Button fx:id="btnViewCourses" layoutX="14.0" layoutY="82.0" onAction="#ViewCourses" prefHeight="25.0" prefWidth="150.0" text="Courses" />
                      </AnchorPane>
                  </TitledPane>
                  <TitledPane animated="false" text="Add">
                      <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
                  </TitledPane>
                  <TitledPane animated="false" text="Delete">
                      <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
                  </TitledPane>
                  <TitledPane animated="false" text="Change">
                      <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
                  </TitledPane>
              </panes>
            </Accordion>
                <Button fx:id="btnHelp" onAction="#ViewHelp" prefHeight="25.0" prefWidth="200.0" text="Help" />
            </VBox>


        </HBox>
    </VBox>
</AnchorPane>
